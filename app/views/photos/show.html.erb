<div class="card photo-form-card">
  <div class="card-header">
    <h2>Фото <%= @photo.description %></h2>
  </div>
  <div class="card-body">

    <p>
      <%= image_tag @photo.image.url(:large) %>

      <br>
      <br>
      
      <%= link_to profile_path(@photo.user_id) do %>
        <i class="ion-person"></i> <%= @photo.user.name %>
      <% end -%>



    </p>
    
    <% if @photo.user == current_user %>
      <span class="pull-xs-right">
          <%= link_to "Изменить", edit_photo_path(@photo), class: "btn btn-primary" %>
            <!-- <i class="ion-edit"> -->
          |
          <%= link_to "Удалить", @photo, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-primary" %>
            <!-- <i class="ion-trash-b"> -->
        </span> |
    <% end %>

    <%= link_to 'Back', photos_path , class: "btn btn-primary"%>

  </div>
</div>
